<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:ignore="NewApi">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyEditTextTheme">
        <item name="colorControlNormal">@color/color_text_grey</item>
    </style>

    <style name="TextViewBottomSheetStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_40sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/gotha_pro_reg</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewBottomSheetStyle_1" parent="TextViewBottomSheetStyle" >
        <item name="android:background">@color/color_service_item</item>
    </style>

    <style name="TextViewBottomSheetStyle_2" parent="TextViewBottomSheetStyle" >
        <item name="android:background">@color/color_current_choose_item</item>
    </style>

    <style name="TextViewNavigationStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_15sdp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/bebas_neue_cyrillic</item>
    </style>

    <style name="DividerItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/_1sdp</item>
        <item name="android:background">#D1D166</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
    </style>

    <style name="ServicesDividerItemStyle" parent="DividerItemStyle">
        <item name="android:background">#51B1B1B1</item>
    </style>

    <style name="MyTabLayoutText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/gotha_pro_reg</item>
        <item name="textAllCaps">true</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="MyButtonStyle" >
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">@dimen/_30sdp</item>
    <item name="android:layout_gravity">center</item>
    <item name="android:background">@drawable/btn_ripple_background</item>
    <item name="android:textAllCaps">false</item>
    <item name="android:textColor">@color/color_news_detail_text</item>
    <item name="android:fontFamily">@font/gotha_pro_reg</item>
    <item name="android:stateListAnimator">@null</item>
    <item name="android:maxLines">1</item>
    <item name="autoSizeMaxTextSize">@dimen/_10sdp</item>
    <item name="autoSizeMinTextSize">@dimen/_8sdp</item>
    <item name="autoSizeTextType">uniform</item>
    </style>

    <style name="MyMainButtonStyle" parent="MyButtonStyle" >
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/_10sdp</item>
        <item name="android:layout_margin">@dimen/_8sdp</item>
    </style>

    <style name="MyMainButtonStyleWrap" parent="MyMainButtonStyle" >
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="PosterStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="layout_constraintDimensionRatio">H, 4:2</item>
    </style>

    <style name="PosterTextStyle" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/gotha_pro_reg</item>
    </style>

    <style name="MyToggleButtonStyle" >
        <item name="android:layout_width">@dimen/toggle_btn_size</item>
        <item name="android:layout_height">@dimen/toggle_btn_size</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textOff">""</item>
        <item name="android:textOn">""</item>
    </style>

</resources>
